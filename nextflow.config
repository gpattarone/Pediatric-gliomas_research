// Define default parameters
params {
    github_script = 'https://raw.githubusercontent.com/gpattarone/Pediatric-gliomas_research/ed98fbfcb1c6c96a2c7fa036da1e68c0fc67bcff/BioPySRA.py'
    accessions = "./accessions.txt"               // Path to the accession list file
    vcf_dir = "./input_vcf"                      // Directory containing VCF files
    output = "./results"                         // Directory to save all output files
    snpEff_db = "/path/to/snpeff/database"       // Path to the SnpEff database
    annovar_dir = "/path/to/annovar"             // Path to ANNOVAR installation
}

// Set memory and CPU limits for processes
process {
    // Default memory and CPUs for all processes
    memory = '4 GB'
    cpus = 2

    // Enable process-level containerization
    withName:run_biopy_sra {
        memory = '8 GB'
        cpus = 4
    }

    withName:annotate_with_snpeff {
        memory = '6 GB'
    }

    withName:annotate_with_annovar {
        cpus = 3
    }
}

// Docker container settings
docker {
    enabled = true
    temp = './.docker'                            // Temporary directory for Docker
    runOptions = '--rm'                           // Automatically remove containers after execution
    default = 'biocontainers/bcftools:v1.14.0'    // Default container for bcftools
}

